<div class="umbrella-datatable-container" id="{{ id }}" data-mount="DataTable" data-options="{{ js|json_encode() }}">

    {% block toolbar %}
        {% if datatable.toolbar %}
            {{ render_toolbar(datatable.toolbar) }}
        {% endif %}
    {% endblock %}

    {% block table %}
        <table class="table {{ class }} js-umbrella-datatable">
            <thead>
            <tr>
                {% for column in columns %}
                    <th class="{{ column.class }}" {% if column.style %}style="{{ column.style | to_css }}"{% endif %}>
                        {{ column.renderLabel(datatable.translationPrefix) | raw }}
                    </th>
                {% endfor %}
            </tr>
            </thead>
            <tbody data-spinner="{{ include("@UmbrellaCore/DataTable/datatable_spinner.html.twig") | e ('html') }}">
                {% include "@UmbrellaCore/DataTable/datatable_spinner.html.twig" %}
            </tbody>
        </table>
    {% endblock %}
</div>
