<div {{ attr | html_attributes }}>
    <button {{ dropdown_button_attr | html_attributes }}>
        {{ icon | icon() }}
        {% if label is not empty %}
            {% if translation_domain %}
                {{ (label_prefix ~ label) | trans([], translation_domain) | raw }}
            {% else %}
                {{ (label_prefix ~ label) | raw }}
            {% endif %}
        {% endif %}
    </button>
    <div {{ dropdown_menu_attr | html_attributes }}">
        {% for dropdown_item in dropdown_items %}
            {{ render_action(dropdown_item) }}
        {% endfor %}
    </div>
</div>