<div class="modal fade js-umbrella-modal {% block modal_class %}{{ class | default('') }}{% endblock %}">
    <div class="modal-dialog fade-simple {% block modal_inner_class %}{{ inner_class | default('modal-lg') }}{% endblock %}">
        <div class="modal-content">

            {% block modal_header %}
                <div class="modal-header {% block modal_header_class %}{% endblock %}">
                    {% block modal_title %}
                        <h4 class="modal-title">{{ title | default('') }}</h4>
                    {% endblock %}
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            {% endblock %}

            {% block modal_body %}
                <div class="modal-body {% block modal_body_class %}{% endblock %}">
                    {% block modal_content %}
                    {% endblock %}
                </div>
                <div class="modal-footer">
                    {% block modal_footer %}
                        <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'action.close' | trans }}</button>
                    {% endblock %}
                </div>
            {% endblock %}
        </div>

        {% block js %}
        {% endblock %}
    </div>
</div>