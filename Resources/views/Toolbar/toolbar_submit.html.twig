{% extends "@UmbrellaCore/Toolbar/toolbar.html.twig" %}

{% block form %}
    {% if form %}
        <form class="js-umbrella-form form-inline"
              enctype="multipart/form-data"
              method="{{ form.vars.method }}">
            {{ form_rest(form) }}

            <button type="submit" class="btn btn-primary btn-flat">
                <i class="fa fa-check"></i> {{ 'action.filter' | trans }}
            </button>
        </form>
    {% endif %}
{% endblock %}